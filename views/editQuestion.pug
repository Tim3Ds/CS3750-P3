extends layout

block content
  form(method="post")
      input(type="hidden", name="_csrf", value=csrfToken)
    
      span Question:
      input(type="text", name="question", value=question['question'], required=true)
      br

      span Answer:
      input(type="text", name="answer", value=question['answer'], required=true)
      br

      span Category:
      input(type="text", name="category", value=question['category'], required=true)
      br

      input(type="Submit" value="Update")
