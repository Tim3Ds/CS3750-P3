extends layout

block content
  link(rel='stylesheet', href='/stylesheets/create.css')
  .container
    .small-container
      h2 Questions
      a.btn.btn-primary.newQ(href = "/questions/create") Create New Question
      br
        
    .question-container
      - for (var i=0; i<questions.length; i++)
        a(href="/questions/"+questions[i]['_id']) 
          p Question:
          .indent #{questions[i]['question']}
          p Answer:
          .indent #{questions[i]['answer']}
          p Category:
          .indent #{questions[i]['category']}
